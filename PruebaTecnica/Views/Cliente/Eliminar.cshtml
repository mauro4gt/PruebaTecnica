@model PruebaTecnica.Models.Cliente

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="form-group row">
            <h2 class="text-danger pl-3">Esta seguro de eliminar este Cliente</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCliente" class="form-label">Nombre Cliente</label>
                    <input asp-for="NombreCliente" disabled class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Correo" class="form-label">Correo</label>
                    <input asp-for="Correo" disabled class="form-control" />
                </div>
            </div>
            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-controller="Cliente" asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </div>

    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
